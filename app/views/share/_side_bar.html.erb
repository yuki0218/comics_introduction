<div class="side-bar">
  <div class="all-btn"><%= link_to "他の人の投稿を見る", comics_path %></div>
  <%= form_with url: search_comics_path, local: true, method: :get, class: "search-form" do |f|%>
    <%= f.text_field :title_word, placeholder: "検索" %>
    <%= f.submit "検索" %>
  <% end %>

  <%= form_with url: search_comics_path, local: true, method: :get, class: "search-form" do |f|%>
    <%= f.collection_select(:target_age, TargetAge.all, :id, :name, {}, {}) %>
    <%= f.collection_select(:genre, Genre.all, :id, :name, {}, {}) %>
    <%= f.submit "検索" %>
  <% end %>
</div>